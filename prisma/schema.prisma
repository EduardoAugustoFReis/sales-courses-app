generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  STUDENT
  TEACHER
  ADMIN
}

enum PlanType {
  FREE
  PREMIUM
}

enum CourseStatus {
  DRAFT
  PUBLISHED
}

model User {
  id           Int      @id @default(autoincrement())
  name         String
  email        String   @unique
  passwordHash String
  role         Role     @default(STUDENT)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  // relações
  courses      Course[]      @relation("TeacherCourses") // cursos criados (se teacher)
  purchases    Purchase[]
  subscription Subscription?
}

model Subscription {
  id        Int       @id @default(autoincrement())
  type      PlanType  @default(FREE)
  active    Boolean   @default(false)
  startDate DateTime?
  endDate   DateTime?
  user      User      @relation(fields: [userId], references: [id])
  userId    Int       @unique
}

model Course {
  id          Int          @id @default(autoincrement())
  title       String
  description String?
  imageUrl    String?
  price       Float        @default(0)
  status      CourseStatus @default(DRAFT)
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  teacher   User @relation("TeacherCourses", fields: [teacherId], references: [id])
  teacherId Int

  modules   Module[]
  purchases Purchase[]
}

model Module {
  id       Int    @id @default(autoincrement())
  title    String
  position Int
  course   Course @relation(fields: [courseId], references: [id])
  courseId Int

  lessons Lesson[]
}

model Lesson {
  id       Int    @id @default(autoincrement())
  title    String
  videoUrl String
  duration Int // 
  position Int

  module   Module @relation(fields: [moduleId], references: [id])
  moduleId Int
}

model Purchase {
  id        Int      @id @default(autoincrement())
  student   User     @relation(fields: [studentId], references: [id])
  studentId Int
  course    Course   @relation(fields: [courseId], references: [id])
  courseId  Int
  createdAt DateTime @default(now())

  @@unique([studentId, courseId])
}
